<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:background="@color/com_lenovo_lsf_appcolor" >
	
    <ImageView
        android:id="@+id/img_phonenum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/com_lenovo_lsf_modify_phonenumber" />
    
    <TextView
        android:id="@+id/tv_modify_account_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_phonenum"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:gravity="center"
        android:text="@string/com_lenovo_lsf_modify_account_text"
        android:textColor="#191919"
        android:textSize="18sp" />
	
    <TextView 
        android:id="@+id/tv_modify_account_confirm_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_modify_account_text"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:gravity="center"
        android:text="@string/com_lenovo_lsf_newphone_confirm_text"
        android:textColor="#474747"
        android:textSize="14sp" />
    
    <Button
        android:id="@+id/next_btn"
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:layout_below="@id/tv_modify_account_confirm_text"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:background="@drawable/btn_inter_onekey_selector_up"
        android:text="@string/com_lenovo_lsf_string_next_step" 
        android:textColor="#ffffff"
        android:textSize="18sp" />   

</RelativeLayout>
