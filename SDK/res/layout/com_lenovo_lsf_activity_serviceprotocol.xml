<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="466dp"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:text="@string/com_lenovo_lsf_lenovouser_userinfo_registerlegalt"
            android:textColor="#191919"
            android:textSize="22sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#a3a3a3" />

    <ProgressBar
        android:id="@+id/progressbar"
        style="@android:style/Widget.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <WebView
        android:id="@+id/webview"
        android:layout_width="fill_parent"
        android:layout_height="346dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#a3a3a3" />

    <Button
        android:id="@+id/accept_it"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/com_lenovo_lsf_list_item_selector"
        android:text="@string/com_lenovo_lsf_lenovouser_btn_ok"
        android:textColor="@drawable/com_lenovo_lsf_dialog_button_text_field_selector"
        android:textSize="18sp" />

</LinearLayout>