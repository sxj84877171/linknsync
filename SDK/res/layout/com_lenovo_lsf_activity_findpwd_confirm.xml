<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/com_lenovo_lsf_appcolor"
    android:scrollbars="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/com_lenovo_lsf_content_padding_left_right"
            android:layout_marginRight="@dimen/com_lenovo_lsf_content_padding_left_right"
            android:layout_marginTop="@dimen/com_lenovo_lsf_content_margin_top"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_findpwd_confirm_account_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/com_lenovo_lsf_lenovouser_login_resendst2"
                android:textColor="#757575"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_findpwd_confirm_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="15601040058"
                android:textColor="@color/com_lenovo_lsf_content_text_font_color"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="@dimen/com_lenovo_lsf_content_padding_left_right"
            android:layout_marginRight="@dimen/com_lenovo_lsf_content_padding_left_right"
            android:layout_marginTop="@dimen/com_lenovo_lsf_findpwd_margin_top_of_reget_captcha"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/et_findpwd_confirm_verify_code"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/com_lenovo_lsf_edittext_background_selector"
                android:hint="@string/com_lenovo_lsf_input_verify_code"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:maxLength="6"
                android:textColorHint="#d1d1d1"
                android:textSize="14sp" />

            <Button
                android:id="@+id/tv_findpwd_confirm_reget_code"
                android:layout_width="106dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/com_lenovo_lsf_horizon_margin_between_editext_and_button"
                android:background="@drawable/com_lenovo_lsf_get_captcha_button_selector"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/com_lenovo_lsf_string_send_again"
                android:textColor="@drawable/com_lenovo_lsf_resent_text_field_selector"
                android:textScaleX="0.9"
                android:textSize="@dimen/com_lenovo_lsf_edittext_hint_font_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_new_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="@dimen/com_lenovo_lsf_content_padding_left_right"
            android:layout_marginRight="@dimen/com_lenovo_lsf_content_padding_left_right"
            android:layout_marginTop="16dp"
            android:text="@string/com_lenovo_lsf_string_set_your_new_password"
            android:textColor="#191919"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/passwordLayout"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/com_lenovo_lsf_content_edittext_width"
            android:layout_marginLeft="@dimen/com_lenovo_lsf_content_padding_left_right"
            android:layout_marginRight="@dimen/com_lenovo_lsf_content_padding_left_right"
            android:addStatesFromChildren="true"
            android:background="@drawable/com_lenovo_lsf_edittext_background_selector" >

            <EditText
                android:id="@+id/et_findpwd_confirm_new_password"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:background="@null"
                android:hint="@string/com_lenovo_lsf_string_password_hint_text1"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:maxLength="20"
                android:singleLine="true"
                android:textColorHint="#d1d1d1"
                android:textSize="@dimen/com_lenovo_lsf_edittext_hint_font_size" />

            <ImageView
                android:id="@+id/iv_findpwd_confirm_visible_password"
                android:layout_width="@dimen/com_lenovo_lsf_content_password_icon_width_or_height"
                android:layout_height="@dimen/com_lenovo_lsf_content_password_icon_width_or_height"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/com_lenovo_lsf_password_icon_margin_left"
                android:layout_marginRight="@dimen/com_lenovo_lsf_password_icon_margin_left"
                android:layout_marginTop="@dimen/com_lenovo_lsf_password_icon_margin_left"
                android:background="@drawable/com_lenovo_lsf_password_visible_icon" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_find_pwd_confirm_error_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/com_lenovo_lsf_content_edittext_width"
            android:layout_marginRight="@dimen/com_lenovo_lsf_content_edittext_width"
            android:layout_marginTop="6dp"
            android:text="验证码错误"
            android:textColor="@color/com_lenovo_lsf_error_tip_font_color"
            android:textSize="@dimen/com_lenovo_lsf_error_tip_font_size"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_findpwd_confirm_ok_and_login"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/com_lenovo_lsf_button_height"
            android:layout_marginLeft="@dimen/com_lenovo_lsf_content_edittext_width"
            android:layout_marginRight="@dimen/com_lenovo_lsf_content_edittext_width"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_inter_onekey_selector_up"
            android:text="@string/com_lenovo_lsf_commit_login"
            android:textColor="#3c96e1"
            android:textSize="16sp"
            android:enabled="false" />
        
        <TextView 
            android:id="@+id/tv_no_getverifycode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="46dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/com_lenovo_lsf_no_getverifycode"
            android:textColor="#0b7cd9"
            android:textSize="14sp" />
        
    </LinearLayout>

</ScrollView>