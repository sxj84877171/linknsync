<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/com_lenovo_lsf_appcolor"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical"
        android:layout_marginBottom="85dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/com_lenovo_lsf_appcolor"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/my_account"
                android:layout_width="fill_parent"
                android:layout_height="122dip"
                android:background="@drawable/com_lenovo_lsf_account_bg" >

                <Button
                    android:id="@+id/btn_activate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/btn_active_inter_onekey_selector_up"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:text="@string/com_lenovo_lsf_active"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/lenovoID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="84dp"
                    android:layout_marginTop="64dp"
                    android:text="@string/com_lenovo_lsf_lenovouser_app_name"
                    android:textColor="#ffffff"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_account"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/lenovoID"
                    android:layout_below="@id/lenovoID"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="12dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="15510483350111111111111111111"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/modify_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="98dp"
                    android:text="@string/com_lenovo_lsf_change_string_modifyccount"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/deputy_account_state"
                style="@style/com_lenovo_lsf_setting_item">

                <ImageView
                    android:id="@android:id/icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/com_lenovo_lsf_deputy_phone_icon"
                    android:visibility="gone" />

                <TextView
                    android:id="@android:id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/com_lenovo_lsf_account_setting_setting_item_margin_left"
                    android:layout_toRightOf="@android:id/icon"
                    android:duplicateParentState="true"
                    android:text="@string/com_lenovo_lsf_bind_email"
                    android:textColor="@drawable/com_lenovo_lsf_list_item_text_field_selector"
                    android:textSize="@dimen/com_lenovo_lsf_account_setting_item_font_size_left" />

                <ImageView
                    android:id="@+id/img_set"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@android:id/hint"
                    android:src="@drawable/com_lenovo_lsf_account_setting_set" />

                <TextView
                    android:id="@android:id/hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="0dp"
                    android:layout_toLeftOf="@+id/tv_account_setting_associated_phone_number_arrow"
                    android:duplicateParentState="true"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@drawable/com_lenovo_lsf_list_item_text_field_selector1"
                    android:textSize="@dimen/com_lenovo_lsf_account_setting_item_font_size" />

                <TextView
                    android:id="@+id/tv_account_setting_associated_phone_number_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/com_lenovo_lsf_account_setting_item_right_icon" />
            </RelativeLayout>

            <View
                style="@style/com_lenovo_lsf_divider_content"
                android:background="#ededed" />

            <RelativeLayout
                android:id="@+id/modify_password_state"
                style="@style/com_lenovo_lsf_setting_item"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@android:id/icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/com_lenovo_lsf_account_setting_account_icon"
                    android:visibility="gone" />

                <TextView
                    android:id="@android:id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/com_lenovo_lsf_account_setting_setting_item_margin_left"
                    android:layout_toRightOf="@android:id/icon"
                    android:duplicateParentState="true"
                    android:text="@string/com_lenovo_lsf_change_string_changepassword"
                    android:textColor="@drawable/com_lenovo_lsf_list_item_text_field_selector"
                    android:textSize="@dimen/com_lenovo_lsf_account_setting_item_font_size_left" />

                <TextView
                    android:id="@+id/tv_account_setting_account_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/com_lenovo_lsf_account_setting_item_right_icon" />

                <TextView
                    android:id="@android:id/hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="0dp"
                    android:layout_toLeftOf="@id/tv_account_setting_account_arrow"
                    android:duplicateParentState="true"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:maxWidth="133dp"
                    android:text="15601040dgfsdgfgga058"
                    android:textColor="@drawable/com_lenovo_lsf_list_item_text_field_selector1"
                    android:textSize="@dimen/com_lenovo_lsf_account_setting_item_font_size"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                style="@style/com_lenovo_lsf_divider_title"
                android:background="#ededed" />

            <RelativeLayout
                android:id="@+id/sina_account_state"
                style="@style/com_lenovo_lsf_setting_item"
                android:visibility="gone">

                <ImageView
                    android:id="@android:id/icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/com_lenovo_lsf_sina_icon_unbind"
                    android:visibility="gone" />

                <TextView
                    android:id="@android:id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/com_lenovo_lsf_account_setting_setting_item_margin_left"
                    android:layout_toRightOf="@android:id/icon"
                    android:duplicateParentState="true"
                    android:text="@string/com_lenovo_lsf_string_sina_webo"
                    android:textColor="@drawable/com_lenovo_lsf_list_item_text_field_selector"
                    android:textSize="@dimen/com_lenovo_lsf_account_setting_item_font_size_left" />

                <TextView
                    android:id="@+id/tv_account_setting_sina_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/com_lenovo_lsf_account_setting_item_right_icon" />

                <TextView
                    android:id="@android:id/hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="0sp"
                    android:layout_toLeftOf="@id/tv_account_setting_sina_arrow"
                    android:duplicateParentState="true"
                    android:textColor="@drawable/com_lenovo_lsf_list_item_text_field_selector1"
                    android:textSize="@dimen/com_lenovo_lsf_account_setting_item_font_size" />
            </RelativeLayout>

            <View
                style="@style/com_lenovo_lsf_divider_content"
                android:background="#ededed" />

            <RelativeLayout
                android:id="@+id/qq_account_state"
                style="@style/com_lenovo_lsf_setting_item"
                android:visibility="gone"
                >

                <ImageView
                    android:id="@android:id/icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/com_lenovo_lsf_qq_icon_unbind"
                    android:visibility="gone" />

                <TextView
                    android:id="@android:id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/com_lenovo_lsf_account_setting_setting_item_margin_left"
                    android:layout_toRightOf="@android:id/icon"
                    android:duplicateParentState="true"
                    android:text="@string/com_lenovo_lsf_string_qq"
                    android:textColor="@drawable/com_lenovo_lsf_list_item_text_field_selector"
                    android:textSize="@dimen/com_lenovo_lsf_account_setting_item_font_size_left" />

                <TextView
                    android:id="@+id/tv_account_setting_qq_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/com_lenovo_lsf_account_setting_item_right_icon" />

                <TextView
                    android:id="@android:id/hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="0sp"
                    android:layout_toLeftOf="@id/tv_account_setting_qq_arrow"
                    android:duplicateParentState="true"
                    android:text=""
                    android:textColor="@drawable/com_lenovo_lsf_list_item_text_field_selector1"
                    android:textSize="@dimen/com_lenovo_lsf_account_setting_item_font_size" />
            </RelativeLayout>

            <View
                style="@style/com_lenovo_lsf_divider_title"
                android:background="#ededed" />


            <View
                android:id="@+id/third_divider"
                style="@style/com_lenovo_lsf_divider_title"
                android:layout_marginBottom="24dp"
                android:background="#ededed"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/my_account_infor"
                style="@style/com_lenovo_lsf_setting_item">

                <TextView
                    android:id="@android:id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/com_lenovo_lsf_account_setting_setting_item_margin_left"
                    android:layout_toRightOf="@android:id/icon"
                    android:duplicateParentState="true"
                    android:text="@string/com_lenovo_lsf_my_account"
                    android:textColor="@drawable/com_lenovo_lsf_list_item_text_field_selector"
                    android:textSize="@dimen/com_lenovo_lsf_account_setting_item_font_size_left" />

                <TextView
                    android:id="@+id/tv_account_setting_my_account_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/com_lenovo_lsf_account_setting_item_right_icon" />
            </RelativeLayout>

            <View
                style="@style/com_lenovo_lsf_divider_title"
                android:background="#ededed" />

            <RelativeLayout
                android:id="@+id/rl_account_setting_other"
                style="@style/com_lenovo_lsf_setting_item"
                android:layout_marginTop="24dp">

                <ImageView
                    android:id="@android:id/icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/com_lenovo_lsf_account_setting_about"
                    android:visibility="gone" />

                <TextView
                    android:id="@android:id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/com_lenovo_lsf_account_setting_setting_item_margin_left"
                    android:layout_toRightOf="@android:id/icon"
                    android:duplicateParentState="true"
                    android:text="@string/com_lenovo_lsf_string_account_setting_about"
                    android:textColor="@drawable/com_lenovo_lsf_list_item_text_field_selector"
                    android:textSize="@dimen/com_lenovo_lsf_account_setting_item_font_size_left" />

                <TextView
                    android:id="@+id/tv_account_setting_about_arrow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/com_lenovo_lsf_account_setting_item_right_icon" />
            </RelativeLayout>

            <View
                android:id="@+id/v_account_setting_diverd_other"
                style="@style/com_lenovo_lsf_divider_title"
                android:background="#ededed" />
            
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/rl_account_setting_logout"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="5dip"
        android:background="@drawable/list_item_selector"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <View
            style="@style/com_lenovo_lsf_divider_title"
            android:background="#ededed" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/com_lenovo_lsf_myaccount_string_logout"
            android:textColor="#e40000"
            android:textSize="18sp" />
    </RelativeLayout>

</RelativeLayout>