<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true"
	android:background="@color/com_lenovo_lsf_title_bg"
	android:orientation="vertical" >

	<include
		android:layout_width="fill_parent"
		android:layout_height="52dp"
		layout="@layout/com_lenovo_lsf_base_title" />

	<View
		android:layout_width="fill_parent"
		android:layout_height="@dimen/com_lenovo_lsf_divider_height"
		android:background="@color/com_lenovo_lsf_devider_between_title_and_content" />

	<FrameLayout
		android:id="@+id/container"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:background="@color/com_lenovo_lsf_appcolor"
		android:animationCache="true" >
	</FrameLayout>

</LinearLayout>