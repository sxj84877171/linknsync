<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/com_lenovo_lsf_content"
	android:background="#fafafa"
	android:paddingTop="0dp"
	android:gravity="center_horizontal"
	android:orientation="vertical" >

	<TextView
	    android:id="@+id/bindedthird_tips"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="40dp"
		android:textAppearance="@style/com_lenovo_lsf_text.tip" 
		/>

	<ImageView
	    android:id="@+id/bindedthird_img"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="58dp"
		android:layout_marginTop="50dp"
		android:src="@drawable/com_lenovo_lsf_bind_qq" />

	<Button
	    android:id="@+id/bindedthird_btn"
		style="@style/com_lenovo_lsf_button.commit"
		android:textColor="#ffffff"
		/>

</LinearLayout>